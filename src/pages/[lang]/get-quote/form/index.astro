---
import Layout from '../../../../layouts/Layout.astro';
import Header from '../../../../components/layout/Header.astro';
import Footer from '../../../../components/layout/Footer';
import FormSlice from '../../../../components/ui/Form';

import '../../../../styles/global.css';

// i18n Settings  //
import { useTranslations } from '../../../../hooks/useTranslations';
import { getLangFromUrl, getStaticPaths } from '../../../../i18n/utils/i18n';
import { quoteTexts as enQuoteTexts } from '../../../../i18n/en/get-quote';
import { quoteTexts as esQuoteTexts } from '../../../../i18n/es/get-quote';

export { getStaticPaths };

const url = new URL(Astro.url);
const lang = getLangFromUrl(url);

const quoteTextsByLang = {
    en: enQuoteTexts,
    es: esQuoteTexts,
};
const texts = quoteTextsByLang[lang] || enQuoteTexts;
const t = useTranslations(texts);

---

<Layout>
    <head>
        <title>{t('title')}</title>
    </head>
    <Header lang={lang} />
    <section class="bg-section-2 w-full pt-20 pb-5">
        <div class="relative max-w-7xl mx-auto grid md:grid-cols-8 gap-8 text-white">
            {/* Contenido principal */}
            <div class="mt-40 flex flex-col justify-center md:col-span-4">
                {/* 
                <h1 class="global-section-text justify-center content-center ">{t('title')}</h1>
                */}
            </div>
            {/* Formulario */}
            <div class="md:col-span-4" transition:name="form" >
                <FormSlice client:load lang={lang}  />
            </div>
        </div>
    </section>
    <Footer client:load />
</Layout>

