---
import Layout from '../../layouts/Layout.astro';
import '../../styles/global.css';

// i18n Settings  //
import { useTranslations } from '../../hooks/useTranslations';
import { getLangFromUrl, getStaticPaths } from '../../i18n/utils/i18n';
import { galleryTexts as enGalleryTexts } from '../../i18n/en/gallery';
import { galleryTexts as esGalleryTexts } from '../../i18n/es/gallery';

export { getStaticPaths };

const url = new URL(Astro.url);
const lang = getLangFromUrl(url);

const galleryTextsByLang = {
    en: enGalleryTexts,
    es: esGalleryTexts,
};
const texts = galleryTextsByLang[lang] || enGalleryTexts;
const t = useTranslations(texts);

---

<Layout lang="{lang}">
    <h1 class="text-3xl font-bold text-center mt-10">{t('title')}</h1>
    <h2>{t('subtitle')}</h2>
</Layout>