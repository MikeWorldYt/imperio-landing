---
import { useState } from 'react';
import astroLogo from '../../assets/astro.svg';
---

<header class="w-full bg-red-500 relative">
  <nav class="max-w-6xl mx-auto px-4 py-4 flex items-center justify-between">
    <div class="flex items-center space-x-2">
      <img src={astroLogo.src} alt="Homepage" class="h-6" />
      <span class="text-white font-bold text-lg">Imperio Pools</span>
    </div>

    <!-- Botón hamburguesa -->
    <button id="menu-toggle" class="md:hidden text-white text-2xl focus:outline-none">
      ☰
    </button>

    <!-- Navegación Desktop -->
    <ul id="nav-menu" class="hidden md:flex space-x-6 text-white font-medium">
      <li><a href="/" class="hover:underline">Home</a></li>
      <li><a href="/gallery" class="hover:underline">Gallery</a></li>
      <li><a href="/services" class="hover:underline">Services</a></li>
      <li><a href="/get-quote" class="hover:underline">Get Quote</a></li>
    </ul>
  </nav>

  <!-- Navegacion Mobile  -->
  <ul id="mobile-menu"
  class="md:hidden fixed right-0 w-full bg-red-400 px-4 py-4 text-white font-medium space-y-2 text-right flex flex-col items-end">
    <li><a href="/" class="block hover:underline">Home</a></li>
    <li><a href="/gallery" class="block hover:underline">Gallery</a></li>
    <li><a href="/services" class="block hover:underline">Services</a></li>
    <li><a href="/get-quote" class="block hover:underline">Get Quote</a></li>
  </ul>

  <!-- Script para el botón hamburguesa -->
  <script type="module" is:inline>
    const toggle = document.getElementById('menu-toggle');
    const menu = document.getElementById('mobile-menu');

    toggle.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  </script>

</header>